		<div class="col-xs-7">
            <table class="table table-striped table-condensed">
                  <thead>
                  <tr>
                      <th>Username</th>
                      <th>Email</th>
                      <th>Rol</th>
                      <th>Fecha Registro</th>
                      <th>Estado</th>
                      <th>#</th>                                           
                  </tr>
              </thead>    
              <tbody>
                <% users.forEach(function(value,index){ %>
                <tr id="lista<%=: value.id %>"> 
