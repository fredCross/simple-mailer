                  <td><%=: value.email %></td>
                  <td><%=: value.rol %></td>
                  <td><%=: value.createdAt | cDate %></td>
                  <td><% if (value.status){ %><span class="label label-success">Activo</span> <% }else{ %> <span class="label label-default">Bloqueado</span>  <% }%></td> 
