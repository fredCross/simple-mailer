<div class="col-sm-6 col-lg-4">
  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Crear lista
</button>
</div>

<div class="col-sm-6 col-lg-7">
<table class="table table-hover" id="table">
  <thead>
  	<th>NÂ°</th>
  	<th>Nombre</th>
    <th>Fecha Ingreso</th>
  	<th>#</th>
  </thead>
  <tbody>
     <% lista.forEach(function(el,index){ %> 
     
  	 <tr id="lista<%=: el.id %>">
  		<td><%=: index %></td>
  		<td><%=: el.nombreLista %></td>
      <td><%=: el.createdAt | cDate  %> </td>
  		<td><form name="oDestroy" action="/listas/destroy/<%=:el.id %>" method="PUT" onsubmit="return $.fn.eliminar(this,'lista');">
          <input type='hidden' name='_csrf' value='<%= _csrf %>'/>
          <input type='hidden' name="id" value='<%=:el.id %>' />
    			<button type="submit" class="btn btn-danger" >Eliminar</button>
    			<button type="button" class="btn btn-success" onclick=" return $.fn.ver(this,'lista','<%=:el.id %>');">Ver</button>
      </form>
  		</td>
  	</tr>
    <% }); %>
  </tbody>
</table>
</div>
<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Crear lista</h4>
      </div>
      <div class="modal-body" >
         <form action="/listas/create" method="POST" name="create">
          <div class="alert alert-success" id="mensajePositivo" style="display:none;"></div>
          <div class="alert alert-danger"  id="mensajeNegativo" style="display:none;"></div>
        <div class="form-group">
            <label for="inputEmail">Nombre de la lista</label>
            <input type="text" class="form-control" id="nombreLista" name="nombreLista" placeholder="Nombre de la Lista">
        </div>
        <div class="form-group">
            <label for="inputEmail">Descripcion</label>
            <input type="text" class="form-control" id="descripcion"  name="descripcion" placeholder="Descripcion">
        </div>      
        <input type='hidden' name='_csrf' value='<%= _csrf %>'>
       
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
      </form>
    </div>
  </div>
</div>
</div>
